generator client {
  provider = "prisma-client-js"
  output   = "../../src/lib/db/generated/postgres"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Batch {
  id                 String   @id
  createdAtUtc       DateTime @default(now())
  windowStartUtc     DateTime
  windowEndUtc       DateTime

  status             String   // "running" | "success" | "failed"
  error              String?

  gdeltQuery          String
  gdeltUrl            String
  articleCount        Int
  europeArticleCount  Int

  supplementLinksText String?

  cards               TopicCard[]
  articles            IngestedArticle[]
}

model TopicCard {
  id           String   @id @default(cuid())
  createdAtUtc DateTime @default(now())

  batchId    String
  rank       Int
  score      Float
  clusterKey String

  cardJsonText String

  batch Batch @relation(fields: [batchId], references: [id], onDelete: Cascade)

  @@unique([batchId, rank])
}

model IngestedArticle {
  id           String   @id @default(cuid())
  createdAtUtc DateTime @default(now())

  batchId String

  url           String
  urlCanonical  String
  title         String
  excerpt       String?
  domain        String?
  sourceCountry String?
  language      String?

  seenDateUtc DateTime?

  rawJsonText String

  batch Batch @relation(fields: [batchId], references: [id], onDelete: Cascade)

  @@unique([batchId, urlCanonical])
}
